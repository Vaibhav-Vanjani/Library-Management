generator client {
  provider = "prisma-client"
  output   = "../generated/prisma-student"
}

datasource db {
  provider = "postgresql"
}

model Student {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  userId        String  @unique
  fullName      String
  payment       String
  isAdmin       Boolean @default(false)
  phoneNumber   String?
  enrolledAt    BigInt?
  expiresAt     BigInt?
  expiryUpdated Boolean @default(false)
}

model payment {
  id                  Int    @id @default(autoincrement())
  userId              String
  razorpay_payment_id String
  razorpay_order_id   String
  razorpay_signature  String
  order_id            String
  payment             String
  expiresAt           String
}
